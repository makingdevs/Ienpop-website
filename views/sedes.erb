<section class="dark-bg" >
    <div class="container inner">
      <div class="row">

        <div class="col-md-8 col-sm-9 center-block text-center">
          <header>

            <h1>Nuestras sedes y encargados</h1>
            <p>Conoce todas nuestras sedes y a todos nuestros encargados que se encuentran dentro de la república mexicana</p>
          </header>
        </div><!-- /.col -->
      </div><!-- /.row -->


      <div class="row inner-top-md">
        <div class="col-lg-12">
          <div id="accordion" class="panel-group">
            <div class="panel panel-default panel-primary">

              <div class="panel-heading text-center">
                <h4 class="panel-title">
                  <a class="panel-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#sedes-content">
                    <span>Sedes</span>
                  </a>
                </h4>
              </div><!-- /.panel-heading -->

              <div id="sedes-content" class="panel-collapse collapse">
                <div class="panel-body">
                 <% @sedes.each do |c|%>
                 
                  <section class="dark-bg" >
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="row">
                            <div class="col-sm-6 outer-top-md inner-right-sm">

                            <iframe
                              width="540"
                              height="350"  
                              width="600"
                              height="450"
                              frameborder="0" style="border:0"
                              src="https://www.google.com/maps/embed/v1/place?key=<%= @api_key %>&q=<%= c.coordinates[0] %>,<%= c.coordinates[1] %>" allowfullscreen>
                            </iframe>


                            </div><!-- ./col -->
                            <div class="col-sm-6 outer-top-md inner-left-sm border-left">
                              <h2 class="text-center"> <%= c.name %> </h2>
                              <h3>Contacto</h3>
                              <ul class="contacts">
                                <li><i class="icon-lifebuoy contact"></i> <%= c.encargado %> </li>
                              </ul><!-- /.contacts -->

                              <h3>Dirección</h3>
                               <ul class="contacts">
                                <li><i class="icon-location contact"></i> <%= c.address %></li>
                                <% c.phone.each do |i|  %>
                                    <li><i class="icon-mobile contact"></i> <%= i %></li>
                                  <% end %>
                                <li><a href="mailto:info@reen.com"><i class="icon-mail-1 contact"></i> <%= c.email %></a></li>
                              </ul><!-- /.contacts -->
                            </div><!-- /.col -->
                          </div><!-- /.row -->
                        </div><!-- /.col -->
                      </div><!-- /.row -->
                  </section>
                <% end %>
                </div><!-- /.panel-body -->
              </div><!-- /.content -->

            </div><!-- /.panel -->


            <div class="panel panel-default panel-primary">

              <div class="panel-heading text-center">
                <h4 class="panel-title">
                  <a class="panel-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#managers-content">
                    <span>Encargados</span>
                  </a>
                </h4>
              </div><!-- /.panel-heading -->

              <div id="managers-content" class="panel-collapse collapse">
                <%  @managers.each do |c| %>
                <div class="panel-body">
                  <section class="dark-bg" >
                    <div class="row">
                      <div class="col-md-4 col-md-offset-1">
                          <p><i class="icon-user-1"></i> <%= c.name  %></p>
                      </div><!-- /.col -->
                      <div class="col-md-7 ">
                        <p><i class="icon-location-1"></i> <%= c.area  %></p>
                        <p><i class="icon-mail-alt"></i> <%= c.email  %></p>
                      </div><!-- /.col -->

                    </div><!-- /.row -->
                    </section>
                  </div><!-- /.panel-body -->
                 <% end %>
              </div><!-- /.content -->

            </div><!-- /.panel -->

          </div><!-- /.accordion -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>
</section>















