<section id="image-background-3" class="item tint-bg image-size" style="background-image: url(images/vistas/contacto/contacto.jpg);">
				<div class="container">
					<div class="row">
						<div class="col-md-8 col-sm-9 inner center-block text-center">
							<header>
								<h1>Contáctanos</h1>
								<p>¿Necesitas más información? Déjanos un mensaje.</p>
							</header>
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div><!-- /.container -->
</section>
<section id="contact-form" class="dark-bg">
			<div class="container innercontact">

					<div class="row">
						<div class="col-sm-12">


								<div class="col-sm-6 outer-top-md inner-right-sm">
									<h2 class="color-title">Escríbenos</h2>

									<form id="contactform" class="forms" action="/contact/info" method="post">

										<div class="row">
											<div class="col-sm-12 col-md-12 ">
												<input type="text" name="name" class="form-control" placeholder="Nombre (Requerido)">
											</div><!-- /.col -->
										</div><!-- /.row -->

										<div class="row">
											<div class="col-sm-12 col-md-12">
												<input type="email" name="email" class="form-control" placeholder="Email (Requerido)">
											</div><!-- /.col -->
										</div><!-- /.row -->

										<div class="row">
											<div class="col-sm-12 col-md-12">
												<input type="text" name="subject" class="form-control" placeholder="Asunto (Requerido)">
											</div><!-- /.col -->
										</div><!-- /.row -->

										<div class="row">
											<div class="col-sm-12 col-md-12">

											    <label for="sedes">Selecciona una sede:</label>
											    <select class="form-control" name="sedes" id="sedes" required>
											    	<% @sedes.each do |c|%>
												      <option value="<%= c.email %>"><%= c.name %></option>

												    <% end %>
												</select>

											 </div>
										</div>

										<div class="row">
											<div class="col-sm-12 col-md-12">
												<textarea name="message" class="form-control" placeholder="Ingresa tu mensaje (Requerido)"></textarea>
											</div><!-- /.col -->
										</div><!-- /.row -->
										
										<div class="row">
											<div class="col-sm-12 col-md-12">
												<%= recaptcha_tags %>		
											</div>
										</div>
										 
										<button type="submit" class="btn btn-default btn-submit">Enviar</button>

									</form>

									<%  if flash[:success] %>
										<div class="alert alert-success fade in" style="margin-top: 10px;">
											<%= flash[:success] %>
										</div>
									<% end %>
									<%  if flash[:warning] %>
										<div class="alert alert-danger fade in" style="margin-top: 10px;">
									    	<%= flash[:warning] %>
										</div>
									<% end %>

								</div><!-- ./col -->

								<div class="col-sm-6 outer-top-md inner-left-sm border-left">

									<h2 class="color-title">Acerca de nosotros</h2>
									<p class="justify-paragraph">Si deseas conocer más acerca de nuestros cursos de capacitación, alguna de nuestras sedes o buscar un contacto más cercano a tu ubicación, no dudes en contactarnos a nuestra oficina central.</p>
									<ul class="contacts">

										<li><i class="icon-location contact"></i> Av. México No. 145, Col. Del Carmen, Coyoacán C.P. 04100, CDMX</li>
							            <li><i class="icon-mobile contact"></i>01 (55) 56593288</li>
						         	    <li><i class="icon-phone contact"></i>01 (55) 56592869</li>
									</ul><!-- /.contacts -->


								</div><!-- /.col -->


						</div><!-- /.col -->
					</div><!-- /.row -->

				</div><!-- /.container -->
			</section>
